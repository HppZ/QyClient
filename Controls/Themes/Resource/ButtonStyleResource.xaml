<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local2="using:Controls.Button"
    xmlns:local="using:Controls.Themes.Resource">

    <Style TargetType="local2:Button1" xmlns:local2="using:Controls.Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local2:Button1">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>
